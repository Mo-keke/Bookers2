<div class="container p-4">
  <div class="row">
    <div class="col-10 col-sm-9 col-md-8 col-lg-6 col-xl-5 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <h3 class="mt-3"><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul class="ml-4">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <p class="mb-1">Title</p>
        <%= f.text_field :title, class: "form-control mb-3" %>
        <p class="mb-1">Opinion</p>
        <%= f.text_area :body, class: "form-control mb-3" %>
        <%= f.submit 'Update Book', class: "btn btn-success mb-3" %>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>