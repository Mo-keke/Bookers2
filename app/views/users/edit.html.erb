<div class="container p-4">
  <div class="row">
    <div class="col-10 col-sm-9 col-md-8 col-lg-6 col-xl-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3 class="mt-3"><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul class="ml-4">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <p class="mb-1">Name</p>
        <%= f.text_field :name, class: "form-control mb-3" %>
        <p class="mb-1">Image</p>
        <%= f.file_field :profile_image, accept: 'image/*',  class: "mb-3" %>
        <p class="mb-1">Introduction</p>
        <%= f.text_area :introduction, class: "form-control mb-3" %>
        <%= f.submit 'Update User', class: "btn btn-secondary mb-3" %>
      <% end %>
    </div>
  </div>
</div>