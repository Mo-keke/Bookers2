<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/sidebar_left', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Books</h2>
      <table class="col-12">
        <tr class="border-top border-bottom border-secondary">
          <th class="col-2"></th>
          <th class="col-3 p-2">Title</th>
          <th class="col-7 p-2">Opinion</th>
        </tr>
        <% @user.books.each do |book| %>
          <tr class="border-bottom">
            <td class="p-2">
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(80, 80) %>
              <% end %>
            </td>
            <td class="align-top p-2">
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td class="align-top p-2">
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
