<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <table class="col-12">
        <tr class="border-top border-bottom">
          <th class="p-3">name</th>
          <td class="p-3"><%= @user.name %></td>
        </tr>
        <tr>
          <th class="p-3">introduction</th>
          <td class="p-3"><%= @user.introduction %></td>
        </tr>
      </table>
      <%= link_to edit_user_path(@user.id) do %>
        <button class="btn btn-outline-secondary btn-block mt-3 mb-5"><i class="fa-solid fa-user-gear"></i></button>
      <% end %>
      <h2>New Book</h2>
      <%= form_with model: @book do |f| %>
        <p class="mb-1">Title</p>
        <%= f.text_field :title, class: "form-control mb-3" %>
        <p class="mb-1">Opinion</p>
        <%= f.text_area :body, class: "form-control mb-3" %>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Users</h2>
      <table class="col-12">
        <tr class="border-top border-bottom border-secondary">
          <th class="col-4 p-2">image</th>
          <th class="col-5 p-2">name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr class="border-bottom">
            <td class="p-2">
              <%= image_tag user.get_profile_image(80, 80) %>
            </td>
            <td class="align-top p-2">
              <%= user.name %>
            </td>
            <td class="align-top p-2">
              <%= link_to 'Show', user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
