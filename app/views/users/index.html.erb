<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/sidebar_left', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Users</h2>
      <table class="col-12">
        <tr class="border-top border-bottom border-secondary">
          <th class="col-4 p-2">image</th>
          <th class="col-5 p-2">name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr class="border-bottom">
            <td class="p-2">
              <%= image_tag user.get_profile_image(80, 80) %>
            </td>
            <td class="align-top p-2">
              <%= user.name %>
            </td>
            <td class="align-top p-2">
              <%= link_to 'Show', user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
